<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="head.additional">
            <block  before="-" name="preload" template="Hyva_Theme::page/head/preload.phtml" />
        </referenceBlock>
        <referenceContainer name="after.body.start">
            <block name="hyva-extend" template="Hyva_Theme::page/js/hyva-extend.phtml" after="head.hyva-scripts"/>
        </referenceContainer>
        <referenceContainer name="page.messages"
                            htmlClass="page messages sticky z-30 top-[92px] lg:top-[61px]">
        </referenceContainer>
    </body>
</page>
