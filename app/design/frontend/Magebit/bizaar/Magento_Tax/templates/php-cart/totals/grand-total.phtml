        <div class="w-7/12 font-normal text-black text-left md:w-auto"
             x-html="`${segment.title}`"
        ></div>
        <div class="w-5/12 font-medium text-right md:w-auto text-navy text-lg"
             x-text="hyva.formatPrice(segment.value)"
        ></div>
    </div>
</template>
