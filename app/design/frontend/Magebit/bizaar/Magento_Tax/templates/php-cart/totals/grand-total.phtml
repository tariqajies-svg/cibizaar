<template x-if="segment.code === 'grand_total' && checkoutConfig.includeTaxInGrandTotal">
    <div>
        <div class="flex pb-1.25 mx-auto text-base lg:text-md md:grid md:grid-cols-2 md:w-full border-container">
            <div class="w-7/12 font-semibold text-left md:w-auto"
                 x-html="`${segment.title} ${includingTaxMessage}` "
            ></div>
            <div class="w-5/12 text-right md:w-auto text-navy font-bold"
                 x-text="hyva.formatPrice(segment.value)"
            ></div>
        </div>

        <div class="flex pb-1.25 mx-auto text-base lg:text-md md:grid md:grid-cols-2 md:w-full">
            <div class="w-7/12 text-left md:w-auto"
                 x-html="`${segment.title} ${excludingTaxMessage}` "
