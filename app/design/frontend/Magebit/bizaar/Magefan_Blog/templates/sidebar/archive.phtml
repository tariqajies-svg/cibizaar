declare(strict_types=1);

use Magefan\Blog\Block\Sidebar\Archive;
use Magento\Framework\Escaper;

/**
 * Blog sidebar archive template
 *
 * @var Archive $block
 * @var Escaper $escaper
 */

$_months = $block->getMonths();

if (count($_months)): ?>
<div class="widget block block-archive relative p-5 pb-4 bg-gray-f2 lg:px-8">
    <div class="block-title mb-5 uppercase">
        <h5><?= $escaper->escapeHtml(__('Archive')) ?></h5>
    </div>
    <div class="block-content">
        <?php foreach ($_months as $time):
            $title = $block->getTranslatedDate($time);
            ?>
            <div class="item inline-block font-bold mb-1">
                <a title="<?= $escaper->escapeHtml(__('Archive %1', $title)) ?>"
                   class="archive-item-link"
                   href="<?= $escaper->escapeUrl($block->getTimeUrl($time)) ?>">
                    <?= $escaper->escapeHtml($title); ?>
                </a>
            </div>
        <?php endforeach; ?>
    </div>
</div>
<?php endif; ?>
