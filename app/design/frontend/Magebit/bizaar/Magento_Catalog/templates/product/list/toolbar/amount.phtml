declare(strict_types=1);

use Magento\Catalog\Block\Product\ProductList\Toolbar;
use Magento\Framework\Escaper;

/** @var Toolbar $block */
/** @var Escaper $escaper */
?>
<p class="toolbar-amount text-gray font-semibold order-3 sm:order-2 md:order-3
    lg:order-2 col-span-2 gap-x-1 lg:text-base mt-5 lg:mt-0" id="toolbar-amount">
    <?php if ($block->getLastPageNum() > 1): ?>
        <?= $escaper->escapeHtml(
            __(
                'Items %1 - %2 of %3',
                '<span class="toolbar-number text-navy font-bold">' . $block->getFirstNum() . '</span>',
                '<span class="toolbar-number text-navy font-bold">' . $block->getLastNum() . '</span>',
                '<span class="toolbar-number text-navy font-bold">' . $block->getCollection()->getSize() . '</span>'
            ),
            ['span']
        ) ?>
    <?php elseif ($block->getTotalNum() == 1): ?>
        <?= $escaper->escapeHtml(
            __('%1 Item', '<span class="toolbar-number">' . $block->getTotalNum() . '</span>'),
            ['span']
        ) ?>
    <?php else: ?>
        <?= $escaper->escapeHtml(
            __('%1 Items', '<span class="toolbar-number">' . $block->getTotalNum() . '</span>'),
            ['span']
        ) ?>
    <?php endif; ?>
</p>
