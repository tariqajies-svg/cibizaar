<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
      layout="2columns-left">
    <update handle="customer_account"/>
    <body>
        <referenceBlock name="aw_ca.role.list.add">
            <arguments>
                <argument name="additional_classes" xsi:type="string">btn btn-primary btn-sm</argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="aw_ca.role.list">
            <arguments>
                <argument name="title" xsi:type="string">Roles and Permissions</argument>
            </arguments>
        </referenceBlock>
        <move element="aw_ca.role.list.add" destination="aw_ca.role.list"/>
    </body>
</page>
