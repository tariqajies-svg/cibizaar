<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="hyva_modal"/>
    <update handle="hyva_form_validation"/>
    <body>
        <referenceContainer name="content">
            <referenceBlock name="breadcrumbs" display="false" />
        </referenceContainer>
        <referenceBlock name="aw_requisition_list_listing.header">
            <block name="aw.requisition_list.create.modal" class="Magento\Framework\View\Element\Template">
                <action method="setFormAction">
                    <argument name="form_action" xsi:type="string">aw_rl/rlist/save</argument>
                </action>
            </block>
        </referenceBlock>
    </body>
</page>
