<script>

    const phoneInput = document.getElementById('phonenumber');
    const phoneError = document.getElementById('phonenumber-error');

    phoneInput.addEventListener('keydown', function (event) {
        const key = event.key;
        if (!/^\d$/.test(key) && key !== 'Backspace') {
            phoneError.innerHTML = "Please enter digits only."
            phoneError.style.color = "red"
            event.preventDefault();
        } else {
            phoneError.innerHTML = ""
        }
    });

    function initRequestForm() {
        const checkboxes = document.querySelectorAll('input[name="option"]');
        const errorMessage = document.getElementById('emailphoneoption-error');
        const fileInput = document.getElementById('attachment');
        const fileError = document.getElementById('file-error');
        const allowedExtensions = ['pdf', 'doc', 'xlsx', 'csv', 'txt'];
        let validFiles = true;
        let validFileSize = true;
        let isChecked = false;

        return {
            errors: 0,

            submitForm() {
                // Do not rename $form, the variable is expected to be declared in the recaptcha output
                const $form = document.querySelector('#request_quote');

                checkboxes.forEach((checkbox) => {
                    if (checkbox.checked) {
                        isChecked = true;
                        errorMessage.textContent = "";
                    }
                });

                if (!isChecked) {
                    errorMessage.textContent = "You must select at least one option.";
                    errorMessage.style.color = "red"
                }

                const files = fileInput.files;
                const maxFileSize = 20 * 1024 * 1024; // 20MB in bytes
                validFiles = true; // Reset validFiles for each validation
                validFileSize = true; // Reset validFileSize for each validation

                for (let i = 0; i < files.length; i++) {
                    const fileExtension = files[i].name.split('.').pop().toLowerCase();
                    const fileSize = files[i].size;

                    if (!allowedExtensions.includes(fileExtension)) {
                        validFiles = false;
                        break;
                    }

                    if (fileSize > maxFileSize) {
                        validFileSize = false;
                        break;
                    }
                }

                if (!validFiles) {
                    fileError.style.display = 'inline';
                    fileError.textContent = "File type must be '.pdf', '.doc', '.xlsx', '.csv', and '.txt'";
                    event.preventDefault();
                } else if (!validFileSize) {
                    fileError.style.display = 'inline';
                    fileError.textContent = "File size must be less than 20MB";
                    event.preventDefault();
                } else {
                    fileError.style.display = 'none';
                    fileError.textContent = "";
                }

                if (this.errors === 0 && isChecked && validFiles && validFileSize) {
                    $form.submit();
                }
            }
        }
    }


