<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="ccavenue_script" type="host">*.ccavenue.ae</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="ccavenue_connect" type="host">*.ccavenue.ae</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="ccavenue_frame" type="host">*.ccavenue.ae</value>
            </values>
        </policy>
        <policy id="form-action">
            <values>
                <value id="ccavenue_form" type="host">*.ccavenue.ae</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
