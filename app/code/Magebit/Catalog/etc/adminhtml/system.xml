<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="catalog">
            <group id="frontend">
                <field id="oos_tooltip" translate="label" type="text" sortOrder="0" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Out of Stock Tooltip Text</label>
                </field>
                <field id="dispatch_text" translate="label" type="text" sortOrder="0" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Ready to Dispatch message</label>
                </field>
                <field id="dispatch_backorder_text" translate="label" type="text" sortOrder="0" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Ready to Dispatch message for backorders</label>
                </field>
                <field id="bulk_price_text" translate="label" type="text" sortOrder="0" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Bulk Price Message</label>
                </field>
            </group>
        </section>
    </system>
</config>
